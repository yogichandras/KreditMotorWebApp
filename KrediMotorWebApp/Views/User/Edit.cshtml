@model KreditMotorDomain.Model.ViewModel.UserViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit User</h2>
<form asp-action="Edit">
    <div class="form-group">
        <label for="email">Email address:</label>
        <input type="email" class="form-control" asp-for="getUser.Email" readonly>
    
    </div>

    <div class="form-group">
        <label for="pwd">Roles:</label>
        <select class="form-control" required>
            @{
                <option value="">--- Select Roles ---</option>
                foreach (var item in Model.listRole)
                {

                    if (Model.getUserRole == item.Name)
                    {
                        <option value="@item.Id" selected="selected">@item.Name</option>

                    }
                    else
                    {
                        <option value="@item.Id">@item.Name</option>

                    }





                }
            }
        </select>
    </div>

    <button type="submit" class="btn btn-default">Submit</button>
</form>


