@model KreditMotorDomain.Model.Motor.ModelMotor

@{
    ViewData["Title"] = "Motor";

}


<div class="main-content">
    <section class="section">
        <div class="section-header">
            <h1>Edit Motor</h1>
            <div class="section-header-breadcrumb">
                <a asp-controller="Motor" asp-action="Index" class="btn btn-primary">Back</a>
            </div>
        </div>

        <div class="section-body">


            <div class="row">
                <div class="col-12 col-md-12 col-lg-12">
                    <div class="card card-primary">
                        <form method="post" asp-action="Edit" enctype="multipart/form-data">
                            <div class="card-body">
                                <div class="col-4" style="padding-top:20px">
                                    <input type="hidden" asp-for="kd_motor" />
                                    <div asp-validation-summary="All"></div>
                                    @{
                                        if (ViewBag.message == "success")
                                        {
                                            <div class="alert alert-success">
                                                Edit Data Motor Berhasil!
                                            </div>
                                        }
                                        else if (ViewBag.message == "failed")
                                        {
                                            <div class="alert alert-danger">
                                                Edit Data Motor Gagal!
                                            </div>
                                        }
                                    }
                                    <div class="form-group">
                                        <label>Merk Motor</label>
                                        <input type="text" class="form-control" asp-for="merk" required />
                                    </div>
                                    <div class="form-group">
                                        <label>Tipe Motor</label>
                                        <input type="text" class="form-control" asp-for="type" required />
                                    </div>

                                    <div class="form-group">
                                        <label>Harga Motor</label>
                                        <input type="text" class="form-control" asp-for="harga" required />
                                    </div>

                                    <div class="form-group">
                                        <label>Picture</label>
                                        <img src="~/image_motor/@Model.picture" class="img-thumbnail" />
                                        <input type="file" class="form-control" name="editPicture" id="editPicture" />
                                        <input type="hidden" asp-for="picture" />
                                    </div>



                                </div>
                            </div>
                            <div class="card-footer text-right" style="border-top:1px solid #f9f9f9">

                                <button type="submit" class="btn btn-primary">Edit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </section>
</div>

<script>
    $('#harga').inputFilter(function (value) {
        return /^\d*$/.test(value);
    });
</script>