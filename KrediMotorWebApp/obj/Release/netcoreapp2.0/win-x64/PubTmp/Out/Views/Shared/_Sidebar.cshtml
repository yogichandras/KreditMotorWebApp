<style>
    body.sidebar-mini .main-sidebar .sidebar-menu > li > a .far{
        margin-right:0px !important;
    }
</style>

<div class="main-sidebar sidebar-style-2">
    <aside id="sidebar-wrapper">
        <div class="sidebar-brand">
            <a asp-action="Index" asp-controller="Home">GEOMO</a>
        </div>
        <div class="sidebar-brand sidebar-brand-sm">
            <a  asp-action="Index" asp-controller="Home">GO</a>
        </div>
        <ul class="sidebar-menu">
            <li class="menu-header">Data Master</li>
            <li class="@(ViewBag.nav == "dashboard"? "active" : "" )"><a class="nav-link" asp-controller="Dashboard" asp-action="Index"><i class="far fa-chart-bar"></i> <span>Dashboard</span></a></li>
            @{
                if (User.IsInRole("admin") || User.IsInRole("cso"))
                {
                    <li class="dropdown @(ViewBag.nav == "admin" || ViewBag.nav == "kasir" || ViewBag.nav == "cso" || ViewBag.nav == "sales" ? "active" : "" )">
                        <a href="#" class="nav-link has-dropdown" data-toggle="dropdown"><i class="fas fa-chalkboard-teacher"></i> <span>User Management</span></a>
                        <ul class="dropdown-menu">
                            @{
                                if (User.IsInRole("admin"))
                                {
                                    <li class="@(ViewBag.nav == "admin" ? "active" : "" )"><a class="nav-link" asp-controller="User" asp-action="Admin">Admin</a></li>
                                }
                            }
                            <li class="@(ViewBag.nav == "kasir" ? "active" : "" )"><a class="nav-link" asp-controller="User" asp-action="Kasir">Kasir</a></li>
                            <li class="@(ViewBag.nav == "cso" ? "active" : "" )"><a class="nav-link" asp-controller="User" asp-action="Cso">CSO</a></li>
                            <li class="@(ViewBag.nav == "sales" ? "active" : "" )"><a class="nav-link" asp-controller="User" asp-action="Sales">Sales</a></li>
                        </ul>
                    </li>
                }
            }
            @{
                if(User.IsInRole("admin") || User.IsInRole("sales")) { 
                <li class="@(ViewBag.nav == "customer" ? "active" : "" )"><a class="nav-link" asp-controller="Customer" asp-action="Index"><i class="far fa-user"></i> <span>Customer</span></a></li>
                }
                }
            <li class="dropdown @(ViewBag.nav == "motor" || ViewBag.nav == "book" ? "active" : "" )">
                <a href="#" class="nav-link has-dropdown" data-toggle="dropdown"><i class="fas fa-motorcycle"></i> <span>Motor Management</span></a>
                <ul class="dropdown-menu">
                    @{
                        if (User.IsInRole("admin") || User.IsInRole("sales"))
                        {
                            <li class="@(ViewBag.nav == "motor" ? "active" : "" )"><a class="nav-link" asp-controller="Motor" asp-action="Index"><span>Data Motor</span></a></li>
                        }
                    }

                    <li class="@(ViewBag.nav == "book" ? "active" : "" )"><a class="nav-link" asp-controller="Transaksi" asp-action="Book"><span>Data Booking Motor</span></a></li>

                </ul>
            </li>
            @{
                if (User.IsInRole("kasir"))
                {
                    <li class="menu-header">Data Sekunder</li>


                    <li class="dropdown @(ViewBag.nav == "cicilan" ? "active" : "" )">
                        <a href="#" class="nav-link has-dropdown"><i class="fas fa-dollar-sign"></i> <span>Transaksi</span></a>
                        <ul class="dropdown-menu">
                            <li class="@(ViewBag.nav == "cicilan" ? "active" : "" )"><a class="nav-link" asp-controller="Cicilan" asp-action="Index">Pembayaran Cicilan</a></li>
                        </ul>
                    </li>
                }
            }

        </ul>

        <div class="mt-4 mb-4 p-3 hide-sidebar-mini">
            <a asp-controller="Laporan" asp-action="Index" class="btn btn-primary btn-lg btn-block btn-icon-split">
                <i class="fas fa-file"></i> Laporan
            </a>
        </div>
    </aside>
</div>